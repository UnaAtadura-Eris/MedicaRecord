<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:context=".MainActivity">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_below="@id/spinner"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            />

        <RadioGroup
            android:id="@+id/optionsRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionTextView"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            >
        </RadioGroup>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textSize="20sp"
            android:layout_below="@id/optionsRadioGroup"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="20sp"
            android:layout_below="@id/nextButton"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置"
            android:textSize="20sp"
            android:layout_below="@id/returnButton"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/detailedExplanationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resetButton"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"

            />



        <TextView
            android:id="@+id/answerToRecordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/detailedExplanationTextView"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/horizontal_line"
            android:padding="8dp"
            android:textIsSelectable="true"
            />
    </RelativeLayout>
</ScrollView>
